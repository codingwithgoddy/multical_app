# Backend Environment Variables - Example
# Copy this file to .env and fill in the values for local development

# Flask
FLASK_APP=app
FLASK_ENV=development  # Options: development, testing, staging, production
SECRET_KEY=your-secret-key-for-local-development
JWT_SECRET_KEY=your-jwt-secret-key-for-local-development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multiprints_dev
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multiprints_test
STAGING_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multiprints_staging

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# M-Pesa
MPESA_API_KEY=your-mpesa-api-key
MPESA_API_SECRET=your-mpesa-api-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey
MPESA_CALLBACK_URL=your-mpesa-callback-url

# Application
APP_NAME=Multiprints Business System
ADMIN_EMAIL=admin@multiprints.com
FRONTEND_URL=http://localhost:3000
CUSTOMER_SITE_URL=http://localhost:3001

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production
REMEMBER_COOKIE_SECURE=False  # Set to True in production

# Server
PORT=5000
HOST=0.0.0.0

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOGZIO_TOKEN=your-logzio-token
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL