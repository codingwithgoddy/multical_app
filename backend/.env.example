# Backend Environment Variables - Example
# Copy this file to .env and fill in the values for local development

# Flask
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-for-local-development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multiprints_dev

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# M-Pesa
MPESA_API_KEY=your-mpesa-api-key
MPESA_API_SECRET=your-mpesa-api-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey

# Application
APP_NAME=Multiprints Business System
ADMIN_EMAIL=admin@multiprints.com
FRONTEND_URL=http://localhost:3000

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOGZIO_TOKEN=your-logzio-token